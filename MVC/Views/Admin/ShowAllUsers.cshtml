
@{
    ViewBag.Title = "ShowAllUsers";
}

<h2>Все пользователи</h2>
<div>
    <table class="table table-bordered table-hover">
        <tr>
            <td><p>Логин</p></td>
            <td><p>Пароль</p></td>
            <td><p>Имя менеджера</p></td>
            <td></td>
            <td></td>
        </tr>
        @foreach(var item in ViewBag.Users)
        {
            <tr>
                <td><p>@item.Login</p></td>
                <td><p>@item.Password</p></td>
                <td><p>@item.ManagerName</p></td>
                <td><p>@Html.ActionLink("Изменить", "EditUser", "Admin", new { login = item.Login }, null)</p></td>
                <td>@Ajax.ActionLink("Удалить", "DeleteUser", "Admin", new { login = item.Login} , new AjaxOptions { HttpMethod= "POST", Confirm="Вы действительно хотите удалить пользователя?", OnSuccess= "window.location.reload()" })</td>
           </tr>
        }
    </table>
</div>

@Scripts.Render("~/scripts/jquery-1.10.2.js")       
