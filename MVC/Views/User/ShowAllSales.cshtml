@model MVC.Models.FilterModel
@{
    ViewBag.Title = "Все пользователи";
}

<h2>Все товары</h2>


<div>
    <p>@Html.ActionLink("Добавить данные о продаже", "CreateSale", "User")</p>
</div>


<div>
@using (Ajax.BeginForm("FilterSales", new AjaxOptions { UpdateTargetId = "results" }))
{
    <label class="control-label">Менеджеры: </label>
    @Html.DropDownList("manager", Model.Managers as SelectList,
                    htmlAttributes: new { @class = "form-control" })

    <label class="control-label">Товар: </label>
    @Html.DropDownList("product", Model.Products as SelectList,
                htmlAttributes: new { @class = "form-control" })
    <label class="control-label">Дата: </label>
    @Html.DropDownList("date", Model.Dates as SelectList,
                htmlAttributes: new { @class = "form-control" })


    <input type="submit" value="Фильтр" class="btn btn-default" />
}
<div id= "results"></div>
</div>




@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")